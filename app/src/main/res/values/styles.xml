        <item name="android:textColor">@color/smoky_gray_dark</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="edit_text_send_message" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColorHint">@color/smoky_gray_dark</item>
        <item name="colorControlNormal">@color/trans</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/trans</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="background">@color/trans</item>
        <item name="android:singleLine">true</item>
